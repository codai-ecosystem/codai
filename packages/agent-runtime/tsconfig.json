{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"module": "ESNext",
		"moduleResolution": "node",
		"target": "ES2020",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"strict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"composite": true,
		"incremental": true,
		"resolveJsonModule": true,
		"allowJs": false,
		"checkJs": false,
		"noEmit": false,
		"downlevelIteration": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/dist/**", "**/*.test.ts", "**/*.spec.ts"]
}

{
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"allowJs": true,
		"module": "ESNext",
		"target": "ES2020",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"strict": true,
		"declaration": false,
		"incremental": true,
		"tsBuildInfoFile": "./dist/.tsbuildinfo",
		"jsx": "react-jsx",
		"baseUrl": "../../",
		"paths": {
			"@aide/*": ["packages/*/dist"],
			"@aide/memory-graph": ["packages/memory-graph/dist"],
			"@aide/agent-runtime": ["packages/agent-runtime/dist"],
			"@aide/ui-components": ["packages/ui-components/dist"]
		}
	},
	"include": ["src/main.ts"],
	"exclude": ["node_modules", "dist", "release", "../../packages", "src/renderer"]
}

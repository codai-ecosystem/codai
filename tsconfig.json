{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"allowJs": true,
		"resolveJsonModule": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"downlevelIteration": true,
		"incremental": true,
		"tsBuildInfoFile": ".tsbuildinfo",
		"baseUrl": ".",
		"paths": {			"@dragoscatalin/*": ["packages/*/src"],
			"@dragoscatalin/memory-graph": ["packages/memory-graph/src"],
			"@dragoscatalin/agent-runtime": ["packages/agent-runtime/src"],
			"@dragoscatalin/ui-components": ["packages/ui-components/src"]
		}
	},	"include": ["packages/*/src/**/*", "apps/*/src/**/*"],
	"exclude": [
		"node_modules",
		"packages/*/dist/**",
		"packages/*/build/**",
		"packages/*/out/**",
		"apps/*/dist/**",
		"apps/*/build/**",
		"apps/*/out/**",
		"**/dist/**",
		"**/build/**",
		"**/out/**",
		"extensions",
		"**/*.tsbuildinfo",
		"**/.turbo/**",
		"**/.next/**"
	],
	"references": [
		{ "path": "./packages/memory-graph" },
		{ "path": "./packages/agent-runtime" },
		{ "path": "./packages/ui-components" }
	]
}
